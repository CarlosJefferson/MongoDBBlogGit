@model MongoDBBlog.Models.Home.IndexModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MongoDB Blog</h1>
    <p class="lead">Simples Blog utilizado de referência para Artigo "Criando uma Aplicação em MongoDB"</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Código Fonte</a></p>
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Posts Recentes</h2>
        @foreach (var post in Model.PostsRecentes)
        {
            <h4>@post.Titulo by @post.Autor on @post.DataPublicacao</h4>
            <p>@post.Texto.Substring(0, Math.Min(post.Texto.Length - 1, 100))</p>
            <p><a class="btn btn-default btn-sm" href="@Url.Action("Post", "Home", new { id = post.Id })">Visualizar &raquo;</a></p>
        }
    </div>
</div>